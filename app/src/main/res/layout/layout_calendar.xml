<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <Button
            android:id="@+id/btnPre"
            android:layout_width="@dimen/imageview_size"
            android:layout_height="@dimen/imageview_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_size_8"
            android:background="@drawable/shape_imageview"
             android:text="&lt;"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tv_fontsize"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvNowData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Janurary 2018"
            android:textSize="@dimen/margin_size_16" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="@dimen/imageview_size"
            android:layout_height="@dimen/imageview_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_size_8"
            android:background="@drawable/shape_imageview"
            android:textColor="@android:color/white"
            android:text="&gt;"
            android:textSize="@dimen/tv_fontsize"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="#666666"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_size"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="日"
            android:gravity="center"
            android:layout_weight="1"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="一"
            android:gravity="center"
            android:layout_weight="1"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="二"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="三"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="四"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="五"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="六"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

    </LinearLayout>

    <GridView
        android:id="@+id/gvTimeShow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:horizontalSpacing="2dp"
        android:verticalSpacing="2dp"
        android:numColumns="7"/>

</LinearLayout>